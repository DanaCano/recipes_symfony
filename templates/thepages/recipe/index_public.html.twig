{% extends 'base.html.twig' %}

{% block title %}Nos Recettes{% endblock %}

{% block body %}

    <div class="container mt-4">
        {% if not recipes.items is same as ([]) %}
            <h1>Mes Recettes</h1>
            <div class="d-flex justify-content-center flex-wrap">
                {% for recipe in recipes %}
                <div class="card text-bg-light mb-3" style="max-width: 18rem;">
                    <div class="card-header">{{ recipe.name }}</div>
                    <div class="card-body">
                        <h5 class="card-title">Difficult√© {{ recipe.difficulty }} sur 5</h5>
                        <p class="card-text">{{ recipe.description|slice(0,100)~'...' }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% else %}
            <p> Il n'y a pas de recettes pour le moment </p>
        {% endif %}
    </div>


{% endblock %}
