
{% extends 'base.html.twig' %}

{% block title %}{{ recipe.name }}{% endblock %}

{% block body %}

    <div class="container">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}


        <h1 class="mt-4">{{ recipe.name }}</h1>

        <div class="recipe__image">
            <img style="max-width: 500px;" src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
        </div>


        <p>La note moyenne attribuée à cette recette est de {{ recipe.average|number_format(2, '.', ',') }} sur 5</p>

        <div>
        <p class="badge bg-primary">Date de création : {{ recipe.createdAt|date('d/m/Y') }}</p>
        </div>


    <div class="mt-4">
        <p class="mt-4">Ingredients </p>
        {% for ingredient in recipe.ingredients %}
        <span class="badge bg-primary">{{ ingredient.name }}</span>
        {% endfor %}
    </div>

    <div class="mt-4">
    {% if recipe.time %}
        <p>Temps : {{ recipe.time }} minutes</p>
    {% else %}
     Temps non renseigné
    {% endif %}
    </div>

    <div class="mt-4">
    {% if recipe.nbPeople %}
        <p>Quantité : {{ recipe.nbPeople }} personnes</p>
    {% else %}
         Nombre de personnes non renseigné
    {% endif %}
    </div>

    <div class="mt-4">
    {% if recipe.difficulty %}
        <p>Difficulté : {{ recipe.difficulty }} sur 5</p>
    {% else %}
         Difficulté non renseigné
    {% endif %}
    </div>


    <div class="mt-4">
    {% if recipe.price %}
        <p>Prix : {{ recipe.price }} €</p>
    {% else %}
         Prix non renseigné
    {% endif %}
    </div>

    <div class="mt-4">
    {% if recipe.description %}
        <p>Description : {{ recipe.description|raw }}</p>
    {% else %}
         Description non renseigné
    {% endif %}
    </div>

    <div class="mark">
     {{ form(form) }}
    </div>
</div>

{% endblock %}
